# Job Finder Assistant Configuration
# Copy this file to .env and fill in your actual values

# --- General Settings ---
# LOG_LEVEL: DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)
LOG_LEVEL="INFO"

# --- Required Settings ---
# Get your OpenAI API key from https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-your_openai_api_key_here"

# Get your Notion API key from https://www.notion.so/my-integrations
NOTION_API_KEY="secret_your_notion_api_key_here"

# The ID of your Notion database for job tracking
NOTION_DATABASE_ID="your_notion_database_id_here"

# Notion property name for job description markdown (default: "Job Description Markdown")
# JOB_DESCRIPTION_MARKDOWN_PROPERTY="Job Description Markdown"

# Path to your master resume (LaTeX format)
# Use absolute path or path relative to the project root
MASTER_RESUME_PATH="/path/to/your/master_resume.tex"

# --- Optional Settings ---
# Uncomment and modify these if you need to override defaults

# LaTeX compilation commands (default: pdflatex and latexdiff from PATH)
# PDFLATEX_COMMAND="/Library/TeX/texbin/pdflatex"  # Example for macOS
# LATEXDIFF_COMMAND="latexdiff"

# Default OpenAI model to use (default: gpt-4.1)
# DEFAULT_MODEL_NAME="gpt-4.1"

# Output directory for generated files (default: ./output)
# DEFAULT_OUTPUT_DIR="output"

# OpenAI API settings
# OPENAI_TEMPERATURE=0.7
# OPENAI_MAX_RETRIES=3
# OPENAI_TIMEOUT_SECONDS=30

# Default CLI settings
# DEFAULT_EXTRACTION_METHOD="crawl4ai_plus_gpt"
# DEFAULT_EXPORT_PDF_DIR="exported_pdfs"

# Crawl4AI settings
# CRAWL4AI_HEADLESS=true
# CRAWL4AI_TIMEOUT_SECONDS=30
# CRAWL4AI_USER_AGENT="Job-Finder-Assistant/1.0"
# CRAWL4AI_MAX_RETRIES=3
# CRAWL4AI_RETRY_DELAY_SECONDS=2
# MAX_CONTENT_LENGTH_CHARS=500000

# Cache settings
# CACHE_ENABLED=true
# CACHE_TTL_HOURS=24
# CACHE_MAX_ENTRIES=1000
# CACHE_DIRECTORY=".cache"

# PDF Export settings (for cached content export)
# PDF_MAIN_FONT="FiraCode Nerd Font"
# PDF_SANS_FONT="FiraCode Nerd Font"
# PDF_MONO_FONT="FiraCode Nerd Font Mono"
# PDF_MARGIN="1in"
# PDF_FONT_SIZE="11pt"
# PDF_LINE_STRETCH="1.2"
# PDF_ENGINE_PRIMARY="xelatex"
# PDF_ENGINE_FALLBACK="lualatex"

# File paths and directories
# PROMPTS_DIRECTORY="prompts"
# METADATA_EXTRACTION_PROMPT_FILE="sys_prompt_extract_metadata.txt"
# CRAWL4AI_PROMPT_FILE="crawl4ai_plus_gpt_prompt.txt"
# TEMP_DIRECTORY="tmp"

# Performance and reliability settings
# API_KEY_MIN_LENGTH=10
# MAX_API_RETRIES_ON_FAILURE=3
# API_RETRY_DELAY_SECONDS=1.0
# REQUEST_BACKOFF_MULTIPLIER=2.0
# MAX_OUTPUT_FILES_TO_KEEP=100

# For testing purposes only
# TEST_NOTION_PAGE_ID="your_test_page_id_here"
